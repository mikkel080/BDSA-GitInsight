<AuthorizeView>
    <Authorized>
    <div class="d-flex flex-row align-items-center">
        <div class="d-flex px-3">
            Hello, @context.User.Identity?.Name!
        </div>
        <div class="d-flex px-3 py-2">
            <a href="MicrosoftIdentity/Account/SignOut" class="btn btn-light text-dark" role="button">Logout</a>
        </div>
    </div>
    </Authorized>
    <NotAuthorized>
    <div class="d-flex">
        <a href="MicrosoftIdentity/Account/SignIn" class="btn btn-light text-dark" role="button">Login</a>
    </div>
    </NotAuthorized>
</AuthorizeView>
